<!-- Form to add or edit an expense -->
<h2 id="expense-formTitle">Add New Expense</h2>
<form id="expenseForm" action="/expenses/save" method="POST">
    <input type="hidden" id="expense_id" name="expense_id">
    
    <div class="form-group">
        <label for="Ex_category_id">Select Category:</label>
        <select id="Ex_category_id" name="Ex_category_id" required></select>
    </div>
    <div class="form-group">
        <label for="Ex_amount">Amount:</label>
        <input type="number" id="Ex_amount" name="Ex_amount" required>
    </div>
    <div class="form-group">
        <label for="Ex_date">Date:</label>
        <input type="date" id="Ex_date" name="Ex_date" required>
    </div>
    <div class="form-group">
        <label for="Ex_description">Desciption:</label>
        <input type="text" id="Ex_description" name="Ex_description" required>
    </div>
    <button type="submit" id="ex-submitButton">Add Expense</button>
</form>

<h2>Existing Expenses</h2>
    <table id="expensesTable">
        <thead>
            <tr>
                <th>Expense ID</th>
                <th>Category</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Rows will be dynamically inserted here -->
        </tbody>
    </table>

<script src="/js/expense.js" defer></script>
